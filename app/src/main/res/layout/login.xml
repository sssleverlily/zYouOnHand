<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



    <ImageView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        tools:ignore="MissingConstraints"
        android:src="@drawable/changecolor"/>


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/back" />

    <ImageView
        android:id="@+id/you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:src="@mipmap/login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />


    <ImageView
        android:id="@+id/smallback"
        android:layout_width="350dp"
        android:layout_height="240dp"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
         />





    <ImageView
        android:id="@+id/picname"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginTop="45dp"
        android:background="@mipmap/username"
        app:layout_constraintEnd_toStartOf="@+id/username"
        app:layout_constraintStart_toStartOf="@+id/smallback"
        app:layout_constraintTop_toTopOf="@+id/smallback"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/username"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="45dp"
        android:layout_marginTop="35dp"
        android:hint="请输入学号"
        android:singleLine="true"
        android:textColor="#999999"
        app:layout_constraintEnd_toEndOf="@+id/smallback"
        app:layout_constraintTop_toTopOf="@+id/smallback"
        tools:ignore="MissingConstraints"
        />

    <ImageView
        android:id="@+id/picpassword"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/password"
        app:layout_constraintEnd_toStartOf="@+id/password"
        app:layout_constraintStart_toStartOf="@+id/smallback"
        app:layout_constraintTop_toBottomOf="@+id/picname"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/password"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginTop="12dp"
        android:hint="请输入身份证后六位"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="#999999"
        app:layout_constraintEnd_toEndOf="@+id/smallback"
        app:layout_constraintTop_toBottomOf="@+id/username"
        />



    <Button
        android:id="@+id/login"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="登      录"
        android:textColor="@color/white"
        android:background="@drawable/changecolor"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/smallback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
       />





</android.support.constraint.ConstraintLayout>