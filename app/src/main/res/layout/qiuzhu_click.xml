<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
       >

        <android.support.design.widget.AppBarLayout
            android:id="@+id/ap1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">



            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/changecolor"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:title="求助"
                app:titleMarginStart="75pt"
                app:titleTextColor="@color/white" />

        </android.support.design.widget.AppBarLayout>

        <EditText
            android:id="@+id/ed_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ap1"
            android:hint="请输入标题                                                                20"
            android:lines="1" />

        <EditText
            android:id="@+id/ed_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ed_title"
            android:hint="详细描述你的问题和需求，表达越清楚，越容易获得帮助哦！" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:text="下一步" />

        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="16dp"
            android:background="#00000000"
            app:srcCompat="@mipmap/back" />

        <ImageButton
            android:id="@+id/imageButton9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_me_setting"
            android:background="#00000000"
            android:layout_toLeftOf="@id/imageButton10"
            android:layout_alignParentBottom="true"/>

        <ImageButton
            android:id="@+id/imageButton10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/topictubiao"
            android:background="#00000000"
            android:layout_toLeftOf="@id/imageButton11"
            android:layout_alignParentBottom="true"/>

        <ImageButton
            android:id="@+id/imageButton11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="#00000000"
            app:srcCompat="@mipmap/pictubiao" />


    </RelativeLayout>



</android.support.constraint.ConstraintLayout>