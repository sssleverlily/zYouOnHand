<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="添加话题"
            android:textSize="20dp" />

        <Button
            android:id="@+id/yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:background="#00000000"
            android:text="确定"
            android:textColor="@color/baseblue"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/topic"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/yes"
            android:lines="1"
            android:text="" />

        <view
            android:layout_width="match_parent"
            android:layout_height="1dp"></view>

        <TextView
            android:id="@+id/hottopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/topic"
            android:text="热门话题"
            android:textColor="#A9A9A9" />

        <Button
            android:id="@+id/dawu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/jihe"
            android:background="@drawable/toumingbuttonstyle"
            android:text="大物"
            android:textColor="@color/baseblue" />

        <Button
            android:id="@+id/english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/dawu"
            android:layout_toRightOf="@+id/xiandai"
            android:background="@drawable/toumingbuttonstyle"
            android:text="英语"
            android:textColor="@color/baseblue" />

        <Button
            android:id="@+id/xiandai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/dawu"
            android:layout_toRightOf="@+id/gaoshu"
            android:background="@drawable/toumingbuttonstyle"
            android:text="线代"
            android:textColor="@color/baseblue" />

        <Button
            android:id="@+id/gaoshu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/hottopic"
            android:background="@drawable/toumingbuttonstyle"
            android:text="高数"
            android:textColor="@color/baseblue" />

        <Button
            android:id="@+id/jihe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="86dp"
            android:background="@drawable/toumingbuttonstyle"
            android:text="几何"
            android:textColor="@color/baseblue" />

        <Button
            android:id="@+id/sixiu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dawu"
            android:layout_toRightOf="@+id/xiandai"
            android:background="@drawable/toumingbuttonstyle"
            android:text="思修"
            android:textColor="@color/baseblue" />

        <ImageView
            android:id="@+id/sousuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="13dp"
            android:layout_marginTop="58dp"
            app:srcCompat="@mipmap/find" />


    </RelativeLayout>

    </RelativeLayout>



</android.support.constraint.ConstraintLayout>