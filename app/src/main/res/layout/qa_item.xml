<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="345pt"
        android:layout_height="133pt"
        >


        <ImageView
            android:id="@+id/touxiang"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15pt"
            android:layout_marginTop="18pt"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/touxiang"
            android:layout_marginTop="15pt"
            android:layout_marginLeft="52pt"
            android:text="name" />

        <TextView
            android:id="@+id/misstime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/name"
            android:layout_marginTop="40pt"
            android:layout_marginRight="51pt"
            android:text="TextView" />

        <ImageView
            android:id="@+id/jifenimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27pt"
            android:layout_marginLeft="130pt"
            app:srcCompat="@mipmap/jifen" />

        <TextView
            android:id="@+id/jifen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140pt"
            android:layout_marginTop="27pt"
            android:text="TextView" />

        <TextView
            android:id="@+id/topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15pt"
            android:layout_marginTop="60pt"
            android:text="TextView" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="58pt"
            android:layout_marginLeft="67pt"
            android:text="TextView" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15pt"
            android:layout_marginTop="81pt"
            android:text="TextView" />

        <Button
            android:id="@+id/lookpic"
            android:layout_width="57pt"
            android:layout_height="13pt"
            android:layout_marginTop="100pt"
            android:layout_marginLeft="120pt"
            android:background="@color/white"
            android:text="查看图片"
            android:textColor="@color/baseblue" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>